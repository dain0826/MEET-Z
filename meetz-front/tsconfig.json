{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  //변수가 선언되었지만 값이 읽히지 않은 경우 생기는 build 에러 무시하기
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true, // JavaScript 파일을 허용
    "checkJs": false, // JavaScript 파일에서 타입 검사를 하지 않음
    "jsx": "react", // JSX 지원, React를 사용하는 경우
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
}